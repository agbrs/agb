{
  "extends": [
    "config:recommended"
  ],
  "ignorePresets": [
    ":prHourlyLimit2"
  ],
  "dependencyDashboardAutoclose": true,
  "packageRules": [
    {
      "groupName": "Javascript packages (non-major)",
      "groupSlug": "js-update",
      "schedule": [
        "on tuesday"
      ],
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ]
    },
    {
      "matchManagers": [
        "cargo"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "enabled": false
    }
  ]
}